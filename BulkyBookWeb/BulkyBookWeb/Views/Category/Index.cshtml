@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<h1 style="color: lightcyan;">Index Category</h1>
<h4 style="color: black;">(Views/Category/Index.cshtml)</h4>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center" style="width: 100%; text-align: center;">
        <thead>
            <tr style="color: darkred;">
                <th>ID Number</th>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Date of Registration</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="15%"><b>@obj.Id</b></td>
                    <td width="35%"><i>@obj.Name</i></td>
                    <td width="20%">@obj.DisplayOrder</td>
                    <td width="30%">@obj.CreateDateTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
